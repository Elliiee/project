<h1>Customers</h1>
{{! READ table}}
<table>
    <thead>
        <tr>
            {{#each customer.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        {{#each customer}}
        <tr>
            <td>{{this.customer_id}}</td>
            <td>{{this.first_name}}</td>
            <td>{{this.last_name}}</td>
            <td>{{this.address}}</td>
            <td>{{this.email}}</td>

            <form id='delete_customer_form' method="POST" action="/customers/delete">
                <input type='hidden' name='delete_customer_id' value='{{this.customer_id}}' />
                <input type='hidden' name='delete_customer_name' value='{{this.first_name}} {{this.last_name}}' />
                <td>
                    <button type='submit'>
                        Delete
                    </button>
                </td>
            </form>
        </tr>
        {{/each}}
    </tbody>
</table>

{{! CREATE form }}
<h2>Create a customer</h2>
<form class='cuForm' id='create_customer_form' method="POST" action="/customers/create">
    <label for='create_customer_first_name'>First Name: </label>
    <input type='text' name='create_customer_first_name' id='create_customer_first_name' required />

    <label for='create_customer_last_name'>Last Name: </label>
    <input type='text' name='create_customer_last_name' id='create_customer_last_name' required />

    <label for='create_customer_address'>Address:</label>
    <input type='text' name='create_customer_address' id='create_customer_address' />

    <label for='create_customer_email'>Email:</label>
    <input type='text' name='create_customer_email' id='create_customer_email' required />

    <input type='submit' />
</form>

{{! UPDATE form }}
<h2>Update a customer</h2>
<form class='cuForm' id='update_customer_form' method="POST" action="/customers/update">
    <label for='update_customer_id'>Customer to Update: </label>
    <select name='update_customer_id' id='update_customer_id' required>
        <option value='' disabled selected>Select a Customer</option>
        {{#each customer}}
        <option value='{{this.customer_id}}' required>
            {{this.customer_id}}
            -
            {{this.first_name}}
            {{this.last_name}}
        </option>
        {{/each}}
    </select>

    <label for='update_customer_address'>First Name: </label>
    <input type='text' name='update_customer_first_name' id='update_customer_first_name' required />

    <label for='update_customer_address'>Last Name: </label>
    <input type='text' name='update_customer_last_name' id='update_customer_last_name' required />

    <label for='update_customer_address'>Address: </label>
    <input type='text' name='update_customer_address' id='update_customer_address' />

    <label for='update_customer_email'>Email: </label>
    <input type='text' name='update_customer_email' id='update_customer_email' required />

    <input type='submit' value='Update' />
</form>